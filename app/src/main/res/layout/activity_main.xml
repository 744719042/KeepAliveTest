<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/exit_application"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出应用"
        android:onClick="exitApp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bind_remote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="bindRemote"
        android:text="绑定远程服务"
        app:layout_constraintTop_toBottomOf="@+id/exit_application" />

    <Button
        android:id="@+id/start_one_pixel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="launchOnePixel"
        android:text="打开一像素Activity"
        app:layout_constraintTop_toBottomOf="@+id/bind_remote" />

</androidx.constraintlayout.widget.ConstraintLayout>